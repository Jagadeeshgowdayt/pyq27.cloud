/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    color: #333;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Header Styles */
.header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 20px 0;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 100;
}

.header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
}

.header h1 {
    color: #4a5568;
    font-size: 1.8rem;
    font-weight: 600;
}

.header h1 i {
    color: #667eea;
    margin-right: 10px;
}

.search-container {
    display: flex;
    background: white;
    border-radius: 25px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    min-width: 300px;
}

#searchInput {
    flex: 1;
    padding: 12px 20px;
    border: none;
    outline: none;
    font-size: 16px;
}

#searchBtn {
    background: #667eea;
    color: white;
    border: none;
    padding: 12px 20px;
    cursor: pointer;
    transition: background 0.3s;
}

#searchBtn:hover {
    background: #5a67d8;
}

/* Admin Access */
.admin-access {
    text-align: center;
    padding: 20px;
}

.admin-btn {
    background: #e53e3e;
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 25px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(229, 62, 62, 0.3);
}

.admin-btn:hover {
    background: #c53030;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(229, 62, 62, 0.4);
}

/* Main Content */
.main-content {
    padding: 40px 0;
}

/* Filters */
.filters {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
    flex-wrap: wrap;
}

.filters select {
    padding: 12px 16px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    background: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    font-size: 16px;
    color: #4a5568;
    cursor: pointer;
    transition: all 0.3s;
    min-width: 150px;
}

.filters select:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

/* Papers Grid */
.papers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 25px;
    margin-bottom: 40px;
}

.paper-card {
    background: white;
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.paper-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #667eea, #764ba2);
}

.paper-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
}

.paper-card h3 {
    color: #2d3748;
    font-size: 1.3rem;
    margin-bottom: 10px;
    font-weight: 600;
}

.paper-card .year {
    color: #667eea;
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: 15px;
}

.paper-card .info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #718096;
    font-size: 0.9rem;
}

.paper-card .pages {
    display: flex;
    align-items: center;
    gap: 5px;
}

.paper-card .view-btn {
    background: #667eea;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s;
}

.paper-card .view-btn:hover {
    background: #5a67d8;
    transform: scale(1.05);
}

/* Loading and No Results */
.loading, .no-results {
    text-align: center;
    padding: 60px 20px;
    color: rgba(255, 255, 255, 0.8);
}

.loading i, .no-results i {
    font-size: 3rem;
    margin-bottom: 20px;
    display: block;
}

.loading h3, .no-results h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
    color: white;
}

.loading p, .no-results p {
    font-size: 1.1rem;
    opacity: 0.8;
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
}

.modal-content {
    background: white;
    margin: 3% auto;
    border-radius: 15px;
    width: 90%;
    max-width: 800px;
    max-height: 90vh;
    overflow-y: auto;
    animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-50px) scale(0.9);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    padding: 10px;
}

.close:hover {
    color: #333;
}

/* Admin Modal */
.admin-modal {
    padding: 30px;
    max-height: 90vh;
    overflow-y: auto;
}

.admin-modal h2 {
    color: #2d3748;
    margin-bottom: 30px;
    text-align: center;
    font-size: 1.8rem;
}

.admin-modal h2 i {
    color: #667eea;
    margin-right: 10px;
}

.upload-mode-info {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 30px;
}

.info-box {
    background: #f7fafc;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    padding: 15px;
}

.info-box h4 {
    color: #2d3748;
    margin-bottom: 10px;
    font-size: 1rem;
}

.info-box p {
    color: #4a5568;
    font-size: 0.9rem;
    margin-bottom: 8px;
}

.info-box ul {
    list-style: none;
    padding-left: 10px;
    margin: 10px 0;
}

.info-box li {
    color: #4a5568;
    font-size: 0.85rem;
    margin-bottom: 5px;
    padding-left: 15px;
    position: relative;
}

.info-box li::before {
    content: 'â†’';
    position: absolute;
    left: 0;
    color: #667eea;
}

.info-box code {
    background: #edf2f7;
    color: #e53e3e;
    padding: 2px 6px;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.85rem;
}

.info-box .note {
    background: #d4edda;
    border: 1px solid #c3e6cb;
    color: #155724;
    padding: 8px;
    border-radius: 5px;
    margin-top: 10px;
    font-size: 0.85rem;
}

.optional {
    font-size: 0.8rem;
    color: #718096;
    font-weight: normal;
    font-style: italic;
}

.upload-form {
    max-width: 600px;
    margin: 0 auto;
}

.form-group {
    margin-bottom: 25px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #4a5568;
}

.form-group input {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    font-size: 16px;
    transition: border-color 0.3s;
}

.form-group input:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.file-info {
    margin-top: 8px;
    font-size: 0.9rem;
    color: #718096;
}

.preview-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 10px;
    margin-top: 15px;
    max-height: 400px;
    overflow-y: auto;
}

.paper-group {
    margin-bottom: 25px;
    padding: 15px;
    border: 2px solid #667eea;
    border-radius: 10px;
    background: #f7fafc;
}

.remove-group-btn {
    background: #e53e3e;
    color: white;
    border: none;
    border-radius: 5px;
    padding: 5px 10px;
    cursor: pointer;
    font-size: 0.85rem;
    transition: all 0.3s;
}

.remove-group-btn:hover {
    background: #c53030;
    transform: scale(1.05);
}

.preview-item {
    position: relative;
    aspect-ratio: 1;
    border-radius: 8px;
    overflow: hidden;
    background: #f7fafc;
    border: 2px solid #e2e8f0;
}

.preview-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.preview-item .remove-btn {
    position: absolute;
    top: 5px;
    right: 5px;
    background: #e53e3e;
    color: white;
    border: none;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    cursor: pointer;
    font-size: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.submit-btn {
    width: 100%;
    background: #48bb78;
    color: white;
    border: none;
    padding: 15px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
    margin-top: 20px;
}

.submit-btn:hover {
    background: #38a169;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(72, 187, 120, 0.3);
}

.submit-btn:disabled {
    background: #a0aec0;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
}

/* Paper Viewer Modal */
.paper-modal {
    width: 95%;
    max-width: 1000px;
    margin: 2% auto;
    padding: 0;
    background: #1a202c;
    color: white;
}

.viewer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 25px;
    background: #2d3748;
    border-radius: 15px 15px 0 0;
}

.paper-title {
    font-size: 1.2rem;
    font-weight: 500;
}

.viewer-close {
    color: #cbd5e0;
    font-size: 24px;
    padding: 5px;
    margin: 0;
}

.viewer-body {
    display: flex;
    align-items: center;
    position: relative;
    padding: 20px;
    min-height: 70vh;
    background: #2d3748;
}

.image-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    margin: 0 60px;
}

#currentImage {
    max-width: 100%;
    max-height: 65vh;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    user-select: none;
    pointer-events: none;
    -webkit-user-drag: none;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
}

/* Protection Overlay */
.page-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    background: transparent;
    cursor: default;
}

.nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 18px;
    transition: all 0.3s;
    z-index: 5;
}

.nav-btn:hover {
    background: rgba(0, 0, 0, 0.9);
    transform: translateY(-50%) scale(1.1);
}

.nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
    transform: translateY(-50%) scale(1);
}

.prev-btn {
    left: 10px;
}

.next-btn {
    right: 10px;
}

.viewer-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 25px;
    background: #1a202c;
    border-radius: 0 0 15px 15px;
}

.page-counter {
    font-size: 0.9rem;
    color: #cbd5e0;
}

.viewer-controls {
    display: flex;
    gap: 10px;
}

.control-btn {
    background: #4a5568;
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
}

.control-btn:hover {
    background: #667eea;
    transform: scale(1.05);
}

/* Responsive Design */
@media (max-width: 768px) {
    .header .container {
        flex-direction: column;
        text-align: center;
    }

    .search-container {
        min-width: unset;
        width: 100%;
        max-width: 400px;
    }

    .filters {
        flex-direction: column;
    }

    .filters select {
        width: 100%;
    }

    .papers-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .modal-content {
        width: 95%;
        margin: 5% auto;
    }

    .paper-modal {
        width: 98%;
        margin: 1% auto;
    }

    .viewer-body {
        padding: 10px;
        min-height: 60vh;
    }

    .image-container {
        margin: 0 45px;
    }

    .nav-btn {
        width: 40px;
        height: 40px;
        font-size: 16px;
    }

    .viewer-footer {
        flex-direction: column;
        gap: 15px;
    }

    #currentImage {
        max-height: 55vh;
    }
    
    .upload-mode-info {
        grid-template-columns: 1fr;
    }
    
    .info-box {
        padding: 12px;
    }
    
    .info-box h4 {
        font-size: 0.95rem;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 15px;
    }

    .header h1 {
        font-size: 1.4rem;
    }

    .papers-grid {
        grid-template-columns: 1fr;
    }

    .paper-card {
        padding: 15px;
    }

    .image-container {
        margin: 0 35px;
    }

    .nav-btn {
        width: 35px;
        height: 35px;
        font-size: 14px;
    }

    .prev-btn {
        left: 5px;
    }

    .next-btn {
        right: 5px;
    }

    #currentImage {
        max-height: 50vh;
    }
}

/* Protection Styles */
body {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

.papers-grid, .paper-card, #currentImage {
    -webkit-user-drag: none;
    -khtml-user-drag: none;
    -moz-user-drag: none;
    -o-user-drag: none;
    user-drag: none;
}

/* Disable context menu on images */
img {
    pointer-events: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
}

/* Hide scrollbars in image container */
.image-container::-webkit-scrollbar {
    display: none;
}

.image-container {
    -ms-overflow-style: none;
    scrollbar-width: none;
}